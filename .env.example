# ============================================================
# Social Media App - Environment Configuration
# Copy this file to .env and fill in your actual values
# ============================================================

# ============ NODE ENVIRONMENT ============
NODE_ENV=development
PORT=5000

# ============ HTTPS/SSL CONFIGURATION ============

# Enable HTTPS (true for production with Docker, false for local dev)
ENABLE_HTTPS=false

# HTTPS port (used when ENABLE_HTTPS=true)
HTTPS_PORT=5443

# SSL certificate paths (required when ENABLE_HTTPS=true)
# For Docker: /app/ssl/server.key and /app/ssl/server.crt
# For Ubuntu: /etc/ssl/private/yourdomain.key and /etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=
SSL_CERT_PATH=

# ============ DATABASE CONFIGURATION ============

# MongoDB Connection String
# Format: mongodb://username:password@host:port/database
# For local development: mongodb://localhost:27017/social-media-app
# For MongoDB Atlas cloud: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/social-media-app

# ============ REDIS CACHING ============

# Redis Connection URL
# For local development: redis://localhost:6379
# With password: redis://:password@localhost:6379
# For production: redis://username:password@redis.example.com:6379
REDIS_URL=redis://localhost:6379

# Redis Expiration times (in seconds)
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=604800

# ============ GOOGLE OAUTH ============

# Get these credentials from Google Cloud Console
# https://console.cloud.google.com/

# OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com

# OAuth 2.0 Client Secret
GOOGLE_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URIs (comma-separated for multiple)
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback
GOOGLE_SCOPES=profile,email

# ============ SESSION & SECURITY ============

# Session secret key (use a strong random string in production)
SESSION_SECRET=change-this-to-a-random-string-in-production

# Session cookie settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_COOKIE_MAX_AGE=604800000

# ============ JWT CONFIGURATION (if using JWT instead of sessions) ============

JWT_SECRET=your-secret-key-here
JWT_EXPIRY=7d

# ============ CORS CONFIGURATION ============

# Allowed origins for CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ============ EMAIL CONFIGURATION (for future notifications) ============

# Email service (gmail, sendgrid, etc.)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

SENDGRID_API_KEY=your-sendgrid-api-key

# ============ ANALYTICS CONFIGURATION ============

# Analytics tracking
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=http://localhost:5000/api/analytics

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Mixpanel (optional)
MIXPANEL_TOKEN=your-mixpanel-token

# ============ WEBSOCKET CONFIGURATION ============

# WebSocket settings for real-time notifications
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8000
WEBSOCKET_CORS_ORIGIN=http://localhost:5173

# ============ CLOUDINARY (for image uploads - optional) ============

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============ LOGGER CONFIGURATION ============

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, pretty
LOG_FORMAT=pretty

# ============ RATE LIMITING ============

# Rate limit window in minutes
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============ FEATURE FLAGS ============

# Enable/disable features
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_OAUTH=true
FEATURE_HASHTAGS=true

# ============ PRODUCTION DEPLOYMENT ============

# Domain name for production
PRODUCTION_DOMAIN=yourdomain.com

# SSL/TLS certificate paths (if using self-signed certs)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============ THIRD-PARTY INTEGRATIONS ============

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Stripe (payments - optional)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# AWS S3 (file storage - optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============ MONITORING ============

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090
